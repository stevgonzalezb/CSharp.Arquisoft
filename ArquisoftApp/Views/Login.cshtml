
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<!-- Google Font: Source Sans Pro -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<!-- Font Awesome -->
<link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/fontawesome-free/css/all.min.css">
<!-- SweetAlert2 -->
<link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
<!-- Toastr -->
<link rel="stylesheet" href="~/Scripts/AdminLTE/plugins/toastr/toastr.min.css">
<!-- Theme style -->
<link rel="stylesheet" href="~/Scripts/AdminLTE/dist/css/adminlte.css">

<label style="color: orangered; ">@ViewBag.Error</label>

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-secondary">
        <div class="card-header text-center">
            <div class="login-logo">
                <img src="~/Content/img/logo-inverted.png" />
            </div>
        </div>
        <div class="card-body">
            <p class="login-box-msg text-bold">Iniciar Sesi&oacute;n</p>

            <form action="@Url.Content("~/Login")" method="post">
                <div class="input-group mb-3" data-toggle="tooltip" data-placement="top" title="Coloque su usuario para ingresar al sistema">
                    <input class="form-control" name="username" placeholder="Usuario">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3" data-toggle="tooltip" data-placement="top" title="Coloque su contraseña para ingresar al sistema">
                    <input type="password" name="password" class="form-control" placeholder="Contraseña">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row" data-toggle="tooltip" data-placement="top" title="De click para ingresar al sistema">
                    <!-- /.col -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-secondary btn-block">Ingresar</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.login-box -->
<!-- jQuery -->
<script src="~/Scripts/AdminLTE/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Scripts/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- SweetAlert2 -->
<script src="~/Scripts/AdminLTE/plugins/sweetalert2/sweetalert2.min.js"></script>
<!-- Toastr -->
<script src="~/Scripts/AdminLTE/plugins/toastr/toastr.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Scripts/AdminLTE/dist/js/adminlte.min.js"></script>

