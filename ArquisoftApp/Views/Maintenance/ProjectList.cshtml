@section scripts{

    <!-- Select2 -->
    <script src="~/Scripts/AdminLTE/plugins/select2/js/select2.full.min.js"></script>


    <script>
        const api = new ProjectApi();
        const apiClients = new ClientApi();
        var project_table;

        var client_table;
        $(document).ready(function () {

            $(async function () {

                //Initialize Select2 Elements
                await $('.select2').select2()

                //Initialize Select2 Elements
                $('.select2bs4').select2({
                    theme: 'bootstrap4'
                })
            });

            $("#helpModalNav").attr('data-target', "#projectsModalHelp");
             LoadTable();
             LoadClientList();

         });

        function LoadTable() {
            project_table = $('#myTable').DataTable({
                "ajax": {
                    "url": "@Url.Action("ListProjects", "Project")",
                    "dataSrc": function (json) {

                        var data = JSON.parse(json.data);

                        $.each(data, function (key, obj) {

                            switch (obj.Status) {
                                case "D":
                                    obj.Status = "Detenido"
                                    break;
                                case "C":
                                    obj.Status = "Crítico"
                                    break;
                                case "E":
                                    obj.Status = "Ejecución"
                                    break;
                            }

                        });

                        return data;
                    }
                },
                 "columns": [
                     { "data": "Id" },
                     { "data": "Name" },
                     { "data": "ClientName" },
                     { "data": "MasterBuilder" },
                     { "data": "Status"},
                     {
                         "data": "Id", "render": function (data) {
                             var buttons = "";

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.PROJECT_EDIT))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar cambios en los datos de los materiales' class='btn btn-outline-secondary btn-sm' type='button' onclick='openModal(" + data + ")'>Visualizar &nbsp;<i class='fas fa-eye'></i></button>" </text>
                              }

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.PROJECT_DELETE))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar el eliminado de materiales' class='btn btn-outline-secondary btn-sm ml-2' type='button' onclick='Delete(" + data + ")'>Eliminar &nbsp;<i class='fa fa-trash'></i></button>" </text>
                              }

                             return buttons;
                         },
                         "orderable": false,
                         "searchable": false,
                         "width": "100px"
                     }
                 ],
                 dom: 'Bfrtip',
                 buttons: [

                     @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.PROJECT_ADD))
                      {
                        <text>
                            {
                                text: 'Agregar Nuevo',
                                attr: { class: 'btn btn-secondary btn-sm' },
                                action: function (e, dt, node, config) {
                                    openModal(0, "Agregar");
                                }

                            }
                        </text>
                      }

                 ],
                 "language": {
                     "url": "@Url.Content("~/Scripts/plugins/datatable/idioma/datatable.es-ES.json")"
                 }

            });

            // Form validations
            var validator = $("#FormModal").validate({
                rules: {
                    txtProjectName: {
                        required: true,
                        minlength: 1
                    }
                },
                messages: {
                    txtProjectName: {
                        required: "Requerido",
                        minlength: "Ingrese un nombre válido."
                    }
                }
            });


        }

        function openModal($projectId) {

            CleanModal();
            if ($projectId == 0) {
                $('#FormModal').modal('show');
            }
            else {
                window.location.href = `Instance?Id=${$projectId}`;
            }
        }

        function LoadClientList() {
            apiClients.ListClients().then(clients => {
                var $ClientSelect = $('#cmbClients');
                $.each(clients.data, function (key, value) {

                    if (value.idState=='1') {
                        var $option = $("<option/>", {
                            value: value.IdClient,
                            text: `${value.Name} ${value.Last_Name}`
                        });
                    }
                                      

                    $ClientSelect.append($option);
                });
            })

        }

        function Save() {

            if ($("#FormModal").valid()) {
                var $data = {
                    oProject: {
                        Id: 0,
                        Name: $("#txtProjectName").val(),
                        SiteArea: '0',
                        ConstructionArea: '0',
                        MasterBuilder: '',
                        IdClient: parseInt($("#cmbClients").val()),
                        IdState: app.enums.States.ACTIVE
                    }
                }

                api.SaveProject($data).then(response => {
                    if (response) {
                        toastr.success('Proyecto guardado correctamente.');
                        window.location.href = `Instance?Id=${response.result}`;
                    } else {
                        toastr.error(response.result);
                    }

                }).catch(err => {

                    toastr.error("Ocurrió un error guardando los datos del Proyecto.");
                })
            } else {
                toastr.error('Por favor valide los datos ingresados.')
            }
            

            
        }

        function Delete($projectId) {
            if (confirm("¿Realmente desea eliminar este proyecto?")) {

                api.DeleteProject($projectId).then(response => {
                    if (response.result) {
                        project_table.ajax.reload();
                        toastr.success('Proyecto eliminado correctamente.');
                    }
                }).catch(err => {
                    toastr.error("Ocurrió un error eliminando los datos del proyecto.");
                })
            }
        }

        function CleanModal() {

            $("#txtProjectName").removeClass("is-invalid");
            $("#txtProjectName").removeClass("is-valid");
            $('.validation-error').remove();


            $("#txtProjectName").val("");

        }

    </script>
}


