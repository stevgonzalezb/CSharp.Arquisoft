@section scripts{
    <script>
        var audit_table;

         $(document).ready( function () {
             $("#helpModalNav").attr('data-target', "#auditModalAyuda");
             LoadTable();
         });

        function LoadTable() {
            audit_table = $('#myTable').DataTable({
                 "ajax": {
                    "url": "@Url.Action("ListAudit", "App")",
                    "dataSrc": function (json) {

                        $.each(json.data, function (key, obj) {
                            val = obj.Date;
                            obj.Date = (new Date(parseInt(val.replace("/Date(", "").replace(")/", ""), 10))).toLocaleDateString('es-CR');;
                        });

                        return json.data;
                    }
                 },
                 "columns": [
                     { "data": "Id" },
                     { "data": "Module" },
                     { "data": "Action" },
                     { "data": "User" },
                     { "data": "Date"},
                    ],
                "order": [[0, "desc"]],
                 dom: 'Bfrtip',
                 buttons: [],
                 "language": {
                     "url": "@Url.Content("~/Scripts/plugins/datatable/idioma/datatable.es-ES.json")"
                 }

            });
        }
    </script>
}

