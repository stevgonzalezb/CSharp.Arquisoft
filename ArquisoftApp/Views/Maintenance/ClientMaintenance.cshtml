@section scripts{
    <script>
        const api = new ClientApi();
        var client_table;
        $(document).ready(function () {

            $("#helpModalNav").attr('data-target', "#clientsModalAyuda");
             LoadTable();

         });

        function LoadTable() {
            client_table = $('#myTable').DataTable({
                 "ajax": {
                     "url": "@Url.Action("List", "Client")",
                     "type": "GET",
                     "datatype": "json"
                 },
                 "columns": [
                     { "data": "IdClient" },
                     { "data": "Name" },
                     { "data": "Last_Name" },
                     { "data": "Address" },
                     { "data": "Phone" },
                     { "data": "Email" },
                     {
                         "data": "IdClient", "render": function (data) {
                             var buttons = "";

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.CLIENT_EDIT))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar cambios en los datos de los clientes' class='btn btn-outline-secondary btn-sm' type='button' onclick='openModal(" + data + ", \"Editar Cliente\")'>Editar &nbsp;<i class='fas fa-pen'></i></button>" </text>
                              }

                             @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.CLIENT_DELETE))
                              {
                                 <text> buttons += "<button data-toggle='tooltip' data-placement='top' title='Acción para realizar el eliminado del cliente' class='btn btn-outline-secondary btn-sm ml-2' type='button' onclick='Delete(" + data + ")'>Eliminar &nbsp;<i class='fa fa-trash'></i></button>" </text>
                              }

                             return buttons;
                         },
                         "orderable": false,
                         "searchable": false,
                         "width": "100px"
                     }
                 ],
                 dom: 'Bfrtip',
                 buttons: [

                     @if(ArquisoftApp.Controllers.AppController.IsAuthorized(ArquisoftApp.Common.AppEnums.Permissions.CLIENT_ADD))
                      {
                        <text>
                            {
                                text: 'Agregar Nuevo',
                                attr: { class: 'btn btn-secondary btn-sm' },
                                action: function (e, dt, node, config) {
                                    openModal(0, "Agregar Cliente");
                                }

                            }
                        </text>
                      }

                 ],
                 "language": {
                     "url": "@Url.Content("~/Scripts/plugins/datatable/idioma/datatable.es-ES.json")"
                 }

            });

            // Methods who add or remove de styled classes
            $.validator.setDefaults({
                //Add Error Class To Fieldset if field invalid
                highlight: function (element) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                //Add Valid Class To Fieldset if field valid
                unhighlight: function (element) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                },
                errorPlacement: function (error, element) {
                    error.addClass('validation-error text-red small').insertAfter(element);
                }
            });

            // Custom methods for validations
            $.validator.addMethod('emailRegex', function (value, element, parameter) {
                return value.match(app.enums.Regex.Email);
            }, '');

            // Custom methods for validations
            $.validator.addMethod('phoneRegex', function (value, element, parameter) {
                return value.match(app.enums.Regex.PhoneNumbers);
            }, '');

            // Form validations
            var validator = $("#FormModal").validate({
                rules: {
                    txtName: {
                        required: true,
                        minlength: 1
                    },
                    txtLastName: {
                        required: true,
                        minlength: 1
                    },
                    txtPhone: {
                        required: true,
                        phoneRegex: true
                    },
                    txtEmail: {
                        required: true,
                        emailRegex: true
                    },
                    txtAddress: {
                        required: true,
                        minlength: 1
                    }
                },
                messages: {
                    txtName: {
                        required: "Requerido",
                        minlength: "Ingrese un nombre válido."
                    },
                    txtLastName: {
                        required: "Requerido",
                        minlength: "Ingrese un apellido válido."
                    },
                    txtPhone: {
                        required: "Requerido",
                        phoneRegex: "Ingrese un número válido."
                    },
                    txtEmail: {
                        required: "Requerido",
                        emailRegex: "Ingrese un correo válido"
                    },
                    txtAddress: {
                        required: "Requedido",
                        minlength: "Ingrese una dirección válida."
                    }
                }
            });
        }

        function openModal($clientId, action) {

            CleanModal();
            $("#txtId").val($clientId);
            $(".modal-title").text(action);
            if ($clientId != 0) {

                api.GetClient($clientId).then(client => {

                    if (client != null) {

                        $("#txtName").val(client.Name);
                        $("#txtLastName").val(client.Last_Name);
                        $("#txtAddress").val(client.Address);
                        $("#txtPhone").val(client.Phone);
                        $("#txtEmail").val(client.Email);
                        $("#chkEnable").prop('checked', client.idState == app.enums.States.ACTIVE ? true : false);

                    }

                })
            } else {

                $("#chkEnable").prop('checked', true);
                $("#txtName").val("");
                $("#txtLastName").val("");
                $("#txtAddress").val("");
                $("#txtPhone").val("");
                $("#txtEmail").val("");
            }

            $('#FormModal').modal('show');

        }

        function Save() {
            if ($("#FormModal").valid()) {
                var $data = {
                    oClient: {
                        IdClient: parseInt($("#txtId").val()),
                        Name: $("#txtName").val(),
                        Last_Name: $("#txtLastName").val(),
                        Address: $("#txtAddress").val(),
                        Phone: $("#txtPhone").val(),
                        Email: $("#txtEmail").val(),
                        IdState: $("#chkEnable").prop('checked') ? app.enums.States.ACTIVE : app.enums.States.DISABLE
                    }
                }

                api.SaveClient($data).then(response => {
                    if (response.result === 'OK') {
                        client_table.ajax.reload();
                        $('#FormModal').modal('hide');
                        toastr.success('Cliente guardado correctamente.')
                    } else {
                        toastr.error(response.result);
                    }
                }).catch(err => {
                    toastr.error("Ocurrió un error guardando los datos del cliente.");
                })
            }
            else {
                toastr.error('Por favor valide los datos ingresados.')
            }

        }

        function Delete($clientId) {
            if (confirm("¿Realmente desea eliminar este cliente?")) {

                api.DeleteClient($clientId).then(response => {
                    if (response.result) {
                        client_table.ajax.reload();
                        toastr.success('Cliente eliminado correctamente.');
                    }
                }).catch(err => {
                    toastr.error("Ocurrió un error eliminando los datos del cliente.");
                })
            }
        }

        function ValidateInputs() {

            var ret = true;

            if ($("#txtEmail").hasClass("is-invalid")) {
                ret = false;
            }

            return ret;
        }

        function CleanModal() {

            $("#txtName").removeClass("is-invalid");
            $("#txtName").removeClass("is-valid");
            $("#txtLastName").removeClass("is-invalid");
            $("#txtLastName").removeClass("is-valid");
            $("#txtAddress").removeClass("is-invalid");
            $("#txtAddress").removeClass("is-valid");
            $("#txtPhone").removeClass("is-invalid");
            $("#txtPhone").removeClass("is-valid");
            $("#txtEmail").removeClass("is-invalid");
            $("#txtEmail").removeClass("is-valid");
            $('.validation-error').remove();


            $("#chkEnable").prop('checked', true);
            $("#txtName").val("");
            $("#txtLastName").val("");
            $("#txtAddress").val("");
            $("#txtPhone").val("");
            $("#txtEmail").val("");

        }

    </script>

    @*@Scripts.Render("~/Scripts/components/Validations.js")*@
}
